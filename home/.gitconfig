[user]
        name = Mike Waites
        email = mikey.waites@gmail.com
[core]
        editor = vim
        filemode = false
[alias]
        co = checkout
        br = branch
        cm = commit
        st = status
        unstage = reset HEAD --
        last = log -1 HEAD
		pub = "!f() { git push -u ${1:-origin} `git symbolic-ref HEAD`; }; f"
[color]
        ui = auto
[color "diff"]
        meta = blue bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = green
        changed = yellow
        untracked = red
